@using Sandbox.UI;
@namespace ProjectBullet.UI.Editor
@attribute [StyleSheet("/UI/Editor/NodeGraph.scss")]

<root>
    <Node GraphableWeaponPart=@GraphableStartNode/>
    
    @if (ActiveGraphableParts == null)
    {
        return;
    }
    
    @foreach (var graphablePart in ActiveGraphableParts)
    {
        <Node GraphableWeaponPart=@graphablePart NodeGraph=@this/>
    }
</root>