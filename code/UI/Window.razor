@using Sandbox.UI;
@namespace ProjectBullet.UI.Shop
@attribute [StyleSheet("/UI/Shop/ShopView.scss")]

<style>
    Window {
        width: @Width;
        height: @Height;
        background-color: black;
        
        flex-direction: column;
        padding: 0 9px 9px;
        border-radius: 5px;
        
        pointer-events: @PointerEventsValue;
        box-shadow: 0 0 10px 0 rgba(0,0,0,0.75);
        
        .title-bar {
            height: 40px;
            flex-direction: column;
            justify-content: center;
            
            color: white;
            font-size: 20px;
            font-family: Inter;
        }
        
        .container {
            position: relative;
            width: 100%;
            height: 100%;
        }
    }
</style>

<root>
    <div class="title-bar" @ref=TitleBar>
        @Title
    </div>
    
    <div class="container" @ref=Container></div>
</root>

